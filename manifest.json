{
    "manifest_version": 2,
    "name": "Salvador de Progresso Technos",
    "version": "0.0.0.6",
    "description": "Salva o progresso nas aulas da plataforma Evolua.",
    "icons": { "128": "resources/images/icon128.png"},
    "permissions": [
        "storage",
        "webRequest",
        "*://*.cloudfront.net/*/aulainterativa/*",
        "*://*.rsc.cdn77.org/*/aulainterativa/*"
    ],
    "web_accessible_resources": [
        "/resources/images/technos_logo.png"
    ],
    "background": { "scripts": ["sources/background.js"] },
    "content_scripts": [{
        "run_at": "document_end",
        "all_frames": true,
        "matches": [
            "*://*.cloudfront.net/*/aulainterativa/*",
            "*://*.evoluaeducacao.com.br/*",
            "*://*.rsc.cdn77.org/*/aulainterativa/*"
        ],
        "js": ["sources/jquery-3.5.1.min.js", "sources/content.js"]
    }]
}